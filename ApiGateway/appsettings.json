{
  "Jwt": {
    "Key": "super_secret_jwt_key_12345",
    "Issuer": "UserManagementService",
    "Audience": "ApiUsers"
  },
  "ReverseProxy": {
    "Routes": {
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/user/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/user" }
        ]
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/order/{**catch-all}" 
        },
        "Transforms": [
          { "PathRemovePrefix": "/order" }
        ]
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "userApi": { "Address": "https://localhost:7241/" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderApi": { "Address": "https://localhost:7088/" }
        }
      }
    }
  }
}
